pipeline {
  
  agent none

  environment { 
   NAME = "eshop-product"
   VERSION = "${env.BUILD_ID}-${GIT_COMMIT}"
   IMAGE = "${NAME}:${VERSION}"
   REPONAME = "setnext"
  }
  stages {
    stage('Checkout eshop project') {
      agent any
      steps {
        git branch: 'main',
          credentialsId: '04b7fff3-441b-491a-9c6d-1654a7fd0b77',
          url: 'https://github.com/setnext/eshop-product.git'

        sh "ls -lat"
      }
    }
    stage('Build and Test') {
       agent {
        docker {
            image 'maven:3.8.1-openjdk-17' 
            args '-v /Users/nbabu/.m2:/root/.m2' 
        }
    }
      steps {
      	sh 'mvn -B -DskipTests clean package'
        sh '${WORKSPACE}'
      }
    }
     stage('Docker Build') {
    	agent any
      steps {
         sh 'docker ps'
//         sh 'docker build -t ${REPONAME}/${IMAGE} .'
      }
    }
    }
  }
